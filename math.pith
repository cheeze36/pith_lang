# math.pith - A simple math module
# This file demonstrates the module system and function definitions.

float PI = 3.1415926535

# Function to calculate the square root using the power operator
define float sqrt(float x):
    return x ^ 0.5

# Function to calculate the factorial of a number
define int factorial(int n):
    if (n == 0):
        return 1
    else:
        return n * factorial(n - 1)
